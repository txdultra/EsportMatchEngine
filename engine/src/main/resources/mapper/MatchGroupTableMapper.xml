<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cj.engine.dao.MatchGroupTableMapper">
    <resultMap id="result" type="com.cj.engine.model.GroupTablesInfo">
        <result column="node_id" jdbcType="VARCHAR" property="nodeId"/>
        <result column="group_id" jdbcType="VARCHAR" property="groupId" />
        <result column="wins" jdbcType="SMALLINT" property="wins"/>
        <result column="loses" jdbcType="SMALLINT" property="loses"/>
        <result column="pings" jdbcType="SMALLINT" property="pings"/>
        <result column="scores" jdbcType="SMALLINT" property="scores"/>
    </resultMap>

    <select id="get" resultMap="result">
        select * from match_group_tables where id=#{id}
    </select>

    <insert id="insert" parameterType="com.cj.engine.model.MatchPatternInfo" keyColumn="id" useGeneratedKeys="true">
        insert into match_group_tables(node_id,group_id,wins,loses,pings,scores)
        values(#{nodeId},#{groupId},#{wins},#{loses},#{pings},#{scores})
    </insert>

    <update id="update" parameterType="com.cj.engine.model.MatchPatternInfo">
        update match_group_tables set group_id=#{groupId},wins=#{wins},loses=#{loses},pings=#{pings},scores=#{scores} where node_id=#{ndoeId}
    </update>
</mapper>